import java.sql.*;
import java.util.Scanner;

public class jdbc_demo{
	Connection con = null;
	Statement stat;
	jdbc_demo() throws ClassNotFoundException, SQLException{
		Class.forName("com.mysql.cj.jdbc.Driver");
		con = DriverManager.getConnection("jdbc:mysql://localhost/orginal" , "root" , "raj123");
		stat = con.createStatement();
		System.out.println("Connection Successful");
		String sql = "INSERT INTO student VALUES(32337, RAJ)";
		int rs = stat.executeUpdate(sql);
			
	}
	
	public void retrive_data() throws SQLException {
		String sql = "SELCT * FROM student";
		ResultSet rs = stat.executeQuery(sql);
		while(rs.next()) {
			int r_n = rs.getInt("ROLL_NO");
			String name = rs.getString("name");
			System.out.println("Roll Number: " + r_n);
			System.out.println("Name " + name + "\n");	
		}

	}
	public void insert_data() throws SQLException {
		String sql = "INSERT INTO student VALUES(32337, RAJ)";
		int rs = stat.executeUpdate(sql);
		
	}
	public static void main(String args[]) throws ClassNotFoundException, SQLException {
		jdbc_demo obj = new jdbc_demo();
//		int ch;
//		int choice;
//		Scanner sc = new Scanner(System.in);
//		Scanner s = new Scanner(System.in);
//		choice = sc.nextInt();
/*
